{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node", "mocha"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules"]
}
